<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtSignUpId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ID" />
    <EditText
        android:id="@+id/txtSignUpPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="PassWord" />
    <EditText
        android:id="@+id/txtSignUpName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name" />
    <EditText
        android:id="@+id/txtSignUpCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Company" />

    <Button
        android:id="@+id/btnSignUpGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS등록" />

    <Button
        android:id="@+id/btnSignUpSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입" />
    <Button
        android:id="@+id/btnSignUpCancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소" />
</LinearLayout>